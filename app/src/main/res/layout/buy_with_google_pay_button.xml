<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48sp"
    android:background="@drawable/google_pay_button_no_shadow_background"
    android:clickable="true"
    android:contentDescription="Buy with Google Pay"
    android:focusable="true"
    android:padding="2sp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:scaleType="fitCenter"
            android:src="@drawable/buy_with_google_pay_button_content"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        android:src="@drawable/googlepay_button_overlay"
        tools:ignore="ContentDescription" />
</RelativeLayout>
